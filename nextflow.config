params {
  help = false
  accession = false
  accession_list = false
  sra = false
  wget = false
  ega = false
  gdc = false
  ascp = false
  ascp_private_key_file = '$(dirname $(readlink -f $(which ascp)))/../etc/asperaweb_id_dsa.openssh'
  gdc_token = false
  gdc_file_id = false
  gdc_manifest = false
  gdc_bamslice = false
  gdc_bamslice_type = "region"
  gdc_fastq = false

  publish_dir_mode = "link"
  out_dir = "results"
  parallel_downloads = 16

  egaCredFile = "~/.ega.json"
  downloadConnections = "1"
}

process{
 errorStrategy = 'retry'
 maxRetry = 3
 withName:SRA_DUMP {
    cpus = 6
    scratch = true
  }
 withName:GDC_BAM_TO_FASTQ {
    cpus = 2
  }
}

report {
  enabled = true
  file = "${params.out_dir}/report.html"
  overwrite = true
}

timeline {
  enabled = true
  file = "${params.out_dir}/timeline.html"
  overwrite = true
}

resume = true

conda.enabled = true
profiles {
  conda {
    process.conda = "envs/default.yml"
  }
}
